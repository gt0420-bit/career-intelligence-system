{
  "dashboard": {
    "title": "Penske Vehicle Telematics - Real-time Monitoring",
    "panels": [
      {
        "title": "Events Per Second",
        "targets": [
          {
            "expr": "rate(kafka_messages_total[1m])"
          }
        ]
      },
      {
        "title": "Processing Latency (P99)",
        "targets": [
          {
            "expr": "histogram_quantile(0.99, rate(processing_latency_seconds_bucket[5m]))"
          }
        ]
      },
      {
        "title": "Active Vehicles",
        "targets": [
          {
            "expr": "count(vehicle_last_seen{job=\"vehicle-producer\"} > (time() - 300))"
          }
        ]
      },
      {
        "title": "Kafka Consumer Lag",
        "targets": [
          {
            "expr": "kafka_consumergroup_lag"
          }
        ]
      }
    ]
  }
}
